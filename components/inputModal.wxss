
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.55);
}

.modal-box { position: fixed; top: 0; left: 0; z-index: 1001; }
.modal { margin-top:40%; margin-left: 90rpx; width: 570rpx; background: #fff; border-radius: 8rpx; }

.modal .body .content { width: 430rpx; padding: 40rpx 70rpx; }
.modal .body .content textarea { background-color: #fff; width: 390rpx; height: 160rpx; padding: 10rpx 20rpx; border: solid 1rpx #e0e0e0; }
.modal .buttons { border-top: solid 1rpx #e0e0e0; overflow: hidden; }
.modal .buttons .button { padding: 0; margin: 0; width: 50%; float: left; border-radius: 8rpx; }
