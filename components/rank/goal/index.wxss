/* components/data/point/index.wxss */

.stripe {
  background-color: #edf6fe;
}

.no-data {
  text-align: center;
  background-color: #ecf1f5;
  padding-top: 100rpx;
}

.no-data image {
  display: inline-block;
  width: 140rpx;
  height: 140rpx;
}

.no-data view {
  color: #808892;
  margin-top: 20rpx;
}
.player-photo {
  display: inline-block;
  width: 44rpx;
  height: 67rpx;
}
/* 表格类样式 */

.tr {
  display: flex;
  line-height: 64rpx;
  padding:10rpx 0rpx;
}

.tr text {
  display: inline-block;
  vertical-align: middle;
}

.tr image {
  display: inline-block;
  vertical-align: middle;
}

.table {
  background-color: #fff;
}

.table-head {
  display: flex;
  color: #808892;
  line-height: 64rpx;
  border-bottom: 1rpx solid #e0e0e0;
  padding:10rpx 0rpx;
}

.table-head .column1 {
  flex: 1;
  text-align: center;
}

.table-head .column2 {
  flex: 1;
}

.table-head .column3 {
  flex: 2;
  text-align: left;
}

.table-head .column4 {
  flex: 4;
  text-align: left;
}

.table-head .column5 {
  flex: 1;
  text-align: center;
}

.tr .column1 {
  flex: 1;
  text-align: center;
}

.tr .column2 {
  flex: 1;
}

.tr .column3 {
  flex: 2;
  text-align: left;
}

.tr .column4 {
  flex: 4;
  text-align: left;
}

.tr .column5 {
  flex: 1;
  color: #808892;
  text-align: center;
}
