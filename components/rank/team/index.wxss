/* 表格类样式 */

.tr {
  display: flex;
  line-height: 64rpx;
}

.tr text {
  display: inline-block;
  vertical-align: middle;
}

.tr image {
  display: inline-block;
  vertical-align: middle;
}

.table {
  background-color: #fff;
}

.table-head {
  display: flex;
  color: #808892;
  line-height: 64rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.table-head .column1 {
  flex: 1;
  text-align: center;
}

.table-head .column2 {
  flex: 1;
}

.table-head .column3 {
  flex: 3;
}

.table-head .column4 {
  flex: .5;
  text-align: center;
}

.table-head .column5 {
  flex: 1.5;
  text-align: center;
}

.table-head .column6 {
  flex: 1.6;
  text-align: center;
}

.table-head .column7 {
  flex: 1;
  text-align: center;
}
.table-head .column8 {
  flex: 1.5;
  text-align: center;
}

.tr .column1 {
  flex: 1;
  text-align: center;
}

.tr .column2 {
  flex: 1;
}

.tr .column3 {
  flex: 3;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tr .column4 {
  flex: .5;
  color: #808892;
  text-align: center;
}

.tr .column5 {
  flex: 1.5;
  color: #808892;
  text-align: center;
}

.tr .column6 {
  flex: 1.6;
  color: #808892;
  text-align: center;
}

.tr .column7 {
  flex: 1;
  color: #808892;
  text-align: center;
}
.tr .column8 {
  flex: 1.5;
  color: #808892;
  text-align: center;
}