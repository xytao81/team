.select-player {
  height: 244rpx;
  width: 100%;
  /* margin-top: 20rpx; */
  background: white;
  display: flex;
  flex-direction: column;

}

.select-player .content {
  margin-left: 30rpx;
  margin-top: 30rpx;
  height: 244rpx;
  width: 690rpx;
  display: flex;
  flex-direction: row;

  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.select-player .content .select-checked {
  margin-top: 20rpx;
}

.select-player .content .info {
  margin-left: 30rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.select-player .content .info .name {
  font-size: 24rpx;
  color: #333;
  height: 26rpx;
  line-height: 26rpx;
}

.select-player .content .info .tag_edit{
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  width: 40rpx;
  height: 40rpx;
}

.select-player .content .info .rights {
  width: 100%;
  height: 50rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
}

.select-player .content .info .positions{
  width: 100%;
  height: 50rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
}


.title {
  font-size: 24rpx;
  color: #808892;
  height: 50rpx;
  line-height: 50rpx;
}

.sub_rights {
  margin-left: 30rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.sub_rights .btn {
  font-size: 24rpx;
  line-height: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
  border-radius: 4rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  border: 1rpx solid #00a7f2;
  color: #00a7f2;
}

.sub_rights .select {
  background: #00a7f2;
  color: white;
}


