.cropper-wrapper { position: fixed; top: 0; left: 0; z-index: 1002; width: 100%; height: 100%; background: rgba(0,0,0,1); }
.cropper { position: absolute; top: 0; left: 0; height: 90%; }
.cropper-buttons { position: fixed; left: 0; bottom: 100rpx; overflow: hidden; width: 100%; height: 80rpx; text-align: center; }
.cropper-buttons .btn { display: inline-block; width: 280rpx; height: 80rpx; font-size: 28rpx; line-height: 80rpx; border-radius: 8rpx; background: #00a7f2; text-align: center; color: #fff; }