.welcome {
  height: 100%;
}
.league-item-box {
  padding: 0 30rpx;
  background-color:#fff;
}
.league-item {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 30rpx 0;
  border-bottom: solid 1rpx #ebebeb;
}

/* 左侧logo信息 */
.league-item .logo {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  /* background: #f00; */
}
.league-item image {
  width: 100%;
}
.league-item .logo .status-name {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  opacity: 0.6;
}
/* 右侧信息 */
.info-box {
    display: inline-block;
    width: 460rpx;
    height: 180rpx;
    vertical-align: top;
    margin-left: 30rpx;
}
.info-box .info-title {
  display:inline-block;
  height: 100rpx;
  line-height: 34rpx;
  font-size: 28rpx;
  color:#333333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /* 超出两行省略 */
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.info-box .info-desc {
  margin-top: 10rpx;
  font-size: 0;
}
.info-box .info-desc text {
  margin-right: 10rpx;
  font-size: 24rpx;
  color: #999;
}
.info-box .info-desc text:last-of-type {
  margin-right: 0;
}
.info-box-f3 {
  font-size: 24rpx;
  line-height: 28rpx;
  color: #808892;
  margin-top: 15rpx;
}
.info-box-f3 image{
  display:inline-block;
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right:.2rem;
}
.info-box-f3 text{
  display: inline-block;
  vertical-align: middle;
  line-height:26rpx;

}
.info-box .info-residue {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}
/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
.load_end {
  margin: 1.0em auto;
  line-height: 1.0em;
  font-size: 14px;
  text-align: center;
}
