.page-section{
    margin-bottom: 20rpx;
  }

.select-popup { z-index: 999; position: absolute; left: 0; top: 0; width: 100%; background: #354053; }
.select-popup .select-popup-teams { max-height: 700rpx; overflow: hidden; overflow-y: scroll; }
.select-popup-row { border-bottom: 1rpx solid #6d7d9d; overflow: hidden; align-items: center; display: flex; }
.select-popup-row .text { float: left; width: 93%; padding: 28rpx 0; color: #a2b1ca; }
.select-popup-row .text-on { color: #fff; }
.select-popup-row icon { float: right; width: 6%; }

.mask { position: absolute; left: 0; top: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, .5); z-index: 999; }

.team-header { line-height: 44rpx; background: #354053; color: #fff; }
.team-header .box { border-bottom: 1rpx solid #6d7d9d; position: relative; height: 100rpx; overflow: hidden; padding: 40rpx 0; margin: 0 30rpx; }
.team-header .avatar { text-align: center; width: 100rpx; height: 100rpx; position: relative; }
.team-header .avatar .pos { position: absolute; left: 0; bottom: 0; width: 100%; height: 36rpx; line-height: 36rpx; background: rgba(0,0,0,0.3); }
.team-header .text { width: 70%; margin-left: 30rpx; }
.team-header .text .t1 { margin-top: 4rpx; line-height: 30rpx; }
.team-header .text .t2 { margin-top: 20rpx; color: #a2b1ca; align-items: center; display: flex; }
.team-header .text .t2 .t2btn { border: solid 1rpx #a2b1ca; line-height: 24rpx; color: #fff; border-radius: 30rpx; padding: 8rpx 20rpx; }
.team-header .arrow-box { position: absolute; top: 30rpx; right: 0; width: 100rpx; height: 130rpx; }
.team-header .arrow { position: absolute; top: 30rpx; right: 0; width: 45rpx; height: 45rpx; background: url("data:image/png;base64,") no-repeat 0 0; background-size: 100% 100%; }

.flex-wrp { display: flex; }
.label { width: 30%; }
.content { width: 70%; }
