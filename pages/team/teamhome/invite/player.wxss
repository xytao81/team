/* pages/login/index.wxss */

.page-section{
    margin-bottom: 20rpx;
  }

.flex-wrp { display: flex; }
.label { width: 30%; }
.content { width: 70%; }

.team-div{
  width: 100%;
  min-height: 1250rpx;
  background: url(https://static.aiqiumi.com/mobile/team/invite_bg.jpg) no-repeat  center  -178rpx #171611;
  background-size: 100% 75%;
  overflow: hidden;
  font-weight: bold;
}
.t-img-div{
  width: 100%;
  height: 180rpx;
  padding: 82rpx 0;
}
.t-img-div image {
  display: block;
  width: 180rpx;
  height: 180rpx;
  margin:0 auto;
  border-radius: 10rpx;
  border: 8rpx solid #cacbcd;
  box-shadow: 0 0 10rpx 4rpx rgba(34,30,31, .45);
  background: #fff;
}
.t-name{
  width:100%;
  height:auto;
  font-size: 40rpx;
  color: #fff;
  text-align: center;
}
.t-info{
  width:100%;
  font-size: 20rpx;
  color:#fff;
  text-align: center;
  padding: 10rpx 0;
}
.t-color{
  width: 500rpx;
  /* height: 1.85rem; */
  background:#313416;
  border-radius: 10rpx;
  margin: 16rpx auto 40rpx auto;
  padding: 10rpx 0;
  overflow: hidden
}
.t-color span{
  float: left;
}
.color-t{
  line-height: 40rpx;
  height: 40rpx;
  display: inline-block;
  margin-left: 24rpx;
  margin-right: 8rpx;
  color:#747931;
  font-size: 20rpx;
}

.bg-color {
  background-size: 100% 100% !important;
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  line-height: 0;
}
.bg-color image {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
}
.join-btn{
  display:block;
  width: 320rpx;
  height: 62rpx;
  margin: 32rpx auto;
  padding: 0;
  text-align: center;
  line-height: 62rpx;
  background:#747931;
  border-radius: 10rpx;
  border:0;
}
.t-intro{
  width:100%;
  margin-top: 8rpx;
  color:#fff;
  line-height: 1.5;
  text-align: left;
}

.family-photo{
  width: 100%;
  height: 24rpx;
  margin: 74rpx 0 64rpx 0;
  overflow: hidden;

}
.family-photo image{
  width:100%;
  height:auto;
}
.footer {
  padding: 32rpx 0 64rpx;
  margin: 0;
  color: #696b45;
  text-align: center;
}
.foorball-num{
  display:flex;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
}