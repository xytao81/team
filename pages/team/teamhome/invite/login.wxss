/* pages/login/index.wxss */

page { background: #fff; }

.page-section{
    margin-bottom: 20rpx;
  }

.flex-wrp { display: flex; }

.form-container { }
.form-row { border-bottom: solid 1rpx #e0e0e0; overflow: hidden; line-height: 80rpx; }
.form-label { float: left; width: 100rpx; color: #333; }
.form-content {float: left; width: 550rpx; position: relative; }
.form-row .form-input { border: 0; background: 0; width: 100%; color: #333; }
.form-row .form-right { position: absolute; right: 0; top: 0; }

.form-tip { margin-left: -50rpx; padding: 30rpx 50rpx; width: 650rpx; }

.form-links { overflow: hidden; }
.form-link { display: inline-block; color: #00a7f2; }

.team-header { font-size: 32rpx; line-height: 44rpx; }
.team-header .box { position: relative; height: 100rpx; overflow: hidden; padding: 40rpx 0; margin: 0 30rpx; }
.team-header .avatar { text-align: center; width: 100rpx; height: 100rpx; position: relative; }
.team-header .avatar .pos { position: absolute; left: 0; bottom: 0; width: 100%; height: 36rpx; line-height: 36rpx; font-size: 26rpx; background: rgba(0,0,0,0.3); }
.team-header .text { width: 70%; margin-left: 30rpx; }
.team-header .text .t1 { margin-top: 4rpx; line-height: 30rpx; font-size: 30rpx; }
.team-header .text .t2 { margin-top: 20rpx; color: #888; font-size: 24rpx; align-items: center; display: flex; }
.team-header .text .t2 .t2btn { border: solid 1rpx #888; font-size: 24rpx; line-height: 24rpx; color: #fff; border-radius: 30rpx; padding: 6rpx 20rpx; }
.team-header .arrow-box { position: absolute; top: 30rpx; right: 0; width: 100rpx; height: 130rpx; }
.team-header .arrow { position: absolute; top: 30rpx; right: 0; width: 30rpx; height: 30rpx; background: url("data:image/png;base64,") no-repeat 0 0; background-size: 100% 100%; }

.weui-footer_fixed-bottom { bottom: 50rpx; }
.weui-footer__text { color: #333; }
