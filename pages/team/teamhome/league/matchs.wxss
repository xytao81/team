.match-header {
  height: 194rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.match-header .title {
  margin-top: 30rpx;
  margin-left: 30rpx;
  width: 690rpx;
  height: 96rpx;
  font-size: 32rpx;
  color: #00a7f2;
  line-height: 48rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.match-header .content {
  margin-top: 18rpx;
  margin-left: 30rpx;
  width: 690rpx;
  height: 30rpx;
  font-size: 24rpx;
  color: #808892;
  line-height: 30rpx;
}

.match-info {
  margin-top: 20rpx;
  background: #fff;
}

.match-info .header {
  height: 90rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  display: flex;
  flex-direction: row;

  border-bottom: 1rpx solid #e0e0e0;
}

.match-info .header .flag {
  width: 10rpx;
  height: 30rpx;
  background-color: #00a7f2;
  margin-top: 30rpx;
}

.match-info .header .text {
  height: 90rpx;
  width:200rpx;
  line-height: 90rpx;
  margin-left: 10rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.match-info .header  .btn {
  height: 90rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.match-info .header .btn .title {
  text-align: right;
  line-height: 90rpx;
  padding: 0 0px;
  font-size: 24rpx;
  color: #00a7f2;
  border: 0px;
  margin-right: 8rpx;
  width: 100%;
}

.match-info .header .btn image {
  height: 24rpx;
  width: 24rpx;
  margin-top: 33rpx;
}


.match-btn{
  height:78rpx;
  flex-direction: row;
  margin: 0 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #e0e0e0;
}

.match-btn .button{
  text-align: center;
  height:48rpx;
  line-height: 48rpx;
  width:200rpx;
  font-size:24rpx;
  border-radius: 24rpx;
  display: inline-block;
}

.button { background: #fff; }
.yellow{
  border: 1rpx solid #f5af35;
  color: #f5af35;
}

.purple{
  border: 1rpx solid #8261ed;
  color: #8261ed;
}

.green{
  border: 1rpx solid #7ac855;
  color: #7ac855;
}


.blue{
  border: 1rpx solid #00a7f2;
  color: #00a7f2;
}

.red{
  border: 1rpx solid #fd7e7e;
  color: #fd7e7e;
}

.default_view{
  height: 170rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.default_view .line{
  margin-left: 30rpx;
  margin-right: 30rpx; 
  height: 1rpx;
  width:690rpx;
  background-color: #e0e0e0;
}

.default_view image{
  margin-top: 30rpx;
  height:60rpx;
  width: 60rpx;
}

.default_view text{
  
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #bcbcbd;
}