/* pages/login/index.wxss */

.page-section {
    margin-bottom: 20rpx;
}

.topbar { position: fixed; left: 0; top: 0; z-index: 9; width: 100%; }

.topbar .count { line-height: 54rpx; }
.selected-tags { line-height: 54rpx; height: 54rpx; overflow-y: scroll; white-space: nowrap; }
.selected-tags .tag { height: 28rpx; display: inline-block; line-height: 28rpx; position: relative; margin-right: 36rpx; }
.selected-tags .tag .weui-badge { background: #808892; border: 0; color: #fff; position: absolute; top: -12rpx; right: -16rpx; font-size: 18rpx; width: 28rpx; height: 28rpx; line-height: 28rpx; padding: 0; }

.players { }
.player-row { overflow: hidden; padding: 20rpx 0; border-bottom: 1rpx solid #e0e0e0; font-size: 24rpx; display: flex; align-items: center; }
.player-row-select { color: #f0f; }
.player-row .avatar { width: 44rpx; height: 67rpx; }
.player-row .name { width: 580rpx; margin-left: 30rpx; }
.player-row .job { width: 120rpx; padding-left: 10rpx; padding-right: 50rpx; margin-left: 30rpx; }
.player-row .job-pick { width: 120rpx; margin-left: 30rpx; border: 1rpx solid #e0e0e0; padding-left: 10rpx; padding-right: 50rpx; line-height: 52rpx; border-radius: 8rpx; background: url('data:image/png;base64,') no-repeat right 20rpx; background-size: 30rpx 15rpx; color: #333; }
.player-row .number { width: 100rpx; margin-left: 30rpx; }
.player-row .number-input { display: flex; align-items: center; justify-content: center; color: #808892; }
.player-row .number-input input { width: 40rpx; margin-left: 30rpx; margin-right: 16rpx; border: 1rpx solid #e0e0e0; color: #333; padding: 0 20rpx; border-radius: 8rpx; }
.player-row .icon { }